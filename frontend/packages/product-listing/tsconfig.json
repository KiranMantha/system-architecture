{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "importHelpers": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["../../@types/**/*.d.ts", "**/*.ts", "**/*.tsx"]
}
